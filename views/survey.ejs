<!doctype html> 
<html>  
  <head>
    <title><%=shopName%></title>
    <link rel="stylesheet" href="/styles.css">
  </head>  
  <body>  
    <h1> Survey </h1> 
    <form method="POST" action="/survey"> 
        First Name:<input id="first" type="text" name="first"/>
        <br>
        <br>
        Last Name:<input id="last" type="text" name="last" />
        <br>
        <br>
        Email:<input id="email" type="email" name="email" />
        <br>
        <br>
        How old are you? <input id="last" type="text" name="last" />
        <br>
        <br>
        Which of the following drinks categories do you consume?
        <br>
        <% for(let i = 0; i < productCategories.length; i++){ %>
            <input type="radio" value= <%=productCategories[i]%>>
            <label for=<%=productCategories[i]%>><%=productCategories[i]%></label>
            <br>
        <% } %>
        <br>
        <br>
        Are you a student?
        <input type="checkbox" value="student">
        <br>
        <br>
        <input type="submit" value="OK" /> 
    </form> 
</body>  
</html>